# =============================================================================
# CONFIGURACIÓN DE OPENAI
# =============================================================================

# API Keys y Modelos
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
PRIMARY_MODEL=gpt-4o-mini
FALLBACK_MODEL=gpt-4.1-nano
EMBEDDING_MODEL=text-embedding-3-small

# Parámetros de generación
TEMPERATURE=0.7
TOP_P=0.9
TOP_K=50
MAX_OUTPUT_TOKENS=300
API_TIMEOUT=30

# =============================================================================
# CONFIGURACIÓN DE RAG
# =============================================================================

# Parámetros de RAG
RAG_NUM_CHUNKS=8
SIMILARITY_THRESHOLD=0.2
EMBEDDINGS_DIR=data/embeddings

# Gestión del historial de conversación
MAX_HISTORY_LENGTH=5

# =============================================================================
# CONFIGURACIÓN DE GOOGLE CLOUD STORAGE
# =============================================================================

# Google Cloud Storage (opcional - para cargar embeddings desde la nube)
USE_GCS=true
GCS_BUCKET_NAME=drcecim-chatbot-storage
GCS_AUTO_REFRESH=true
GCS_REFRESH_INTERVAL=300

# =============================================================================
# CONFIGURACIÓN DE WHATSAPP BUSINESS API
# =============================================================================

# WhatsApp Business API (opcional - para funcionalidad completa)
WHATSAPP_API_TOKEN=your-whatsapp-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Número de teléfono para pruebas (opcional)
MY_PHONE_NUMBER=+5491112345678

# =============================================================================
# CONFIGURACIÓN DE GOOGLE APIS
# =============================================================================

# Google API Key (para Calendar y Sheets)
GOOGLE_API_KEY=your-google-api-key

# Google Sheets (Cursos)
CURSOS_SPREADSHEET_ID=your-spreadsheet-id

# Google Calendar (IDs de calendarios)
CALENDAR_ID_EXAMENES=your-calendar-id-examenes
CALENDAR_ID_INSCRIPCIONES=your-calendar-id-inscripciones
CALENDAR_ID_CURSADA=your-calendar-id-cursada
CALENDAR_ID_TRAMITES=your-calendar-id-tramites

# =============================================================================
# CONFIGURACIÓN DEL SERVIDOR
# =============================================================================

# Configuración del servidor
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8080

# =============================================================================
# CONFIGURACIÓN DE SISTEMA
# =============================================================================

# Configuración de dispositivo (principalmente para desarrollo)
DEVICE=auto

# Configuración para integración con drcecim_upload
DRCECIM_UPLOAD_INTEGRATION=true

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================

# Configuración de logging
LOG_LEVEL=INFO
LOG_FORMAT=%(levelname)s - %(message)s

# =============================================================================
# CONFIGURACIÓN DE GOOGLE SHEETS
# =============================================================================

# Google Sheets configuración específica
GOOGLE_SHEETS_DEFAULT_SHEET_NAME=MARZO 