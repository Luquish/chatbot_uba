# Configuración de entorno
# Opciones: development (usar ngrok para desarrollo local) o production
ENVIRONMENT=development

# Configuración de Usuario para Pruebas
# Tu número de WhatsApp personal con código de país para pruebas (ejemplo: +5491150897333)
MY_PHONE_NUMBER=

# Configuración de WhatsApp Business API
# Obtén estas credenciales desde Facebook Business Manager
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# URL del backend para recibir mensajes
BACKEND_URL=http://localhost:8000/api/whatsapp/message

# Configuración de Glitch (para desarrollo con webhook)
GLITCH_PROJECT_NAME=
GLITCH_API_URL=https://api.glitch.com

# Configuración del servidor
HOST=0.0.0.0
PORT=8000

# Rutas de directorios para el modelo y embeddings
MODEL_PATH=models/finetuned_model
EMBEDDINGS_DIR=data/embeddings

# Configuración de modelos de OpenAI
OPENAI_API_KEY=
PRIMARY_MODEL=gpt-4o-mini
FALLBACK_MODEL=gpt-4.1-nano
EMBEDDING_MODEL=text-embedding-3-small

# Parámetros de generación
MAX_LENGTH=512
TEMPERATURE=0.7
TOP_P=0.9
TOP_K=50
MAX_OUTPUT_TOKENS=300

# Configuración de RAG
RAG_NUM_CHUNKS=3
SIMILARITY_THRESHOLD=0.3

# Configuración del dispositivo (auto, cuda, cpu, mps)
DEVICE=mps

# Configuración del entorno
API_TIMEOUT=30